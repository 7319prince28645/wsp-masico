{
  "name": "whatsapp-sender-root",
  "version": "1.0.0",
  "description": "Root for WhatsApp Sender",
  "scripts": {
    "install-all": "npm install --prefix server && npm install --prefix client",
    "start-server": "npm start --prefix server",
    "start-client": "npm run dev --prefix client",
    "dev": "concurrently \"npm run start-server\" \"npm run start-client\"",
    "build:client": "npm run build --prefix client",
    "electron:dev": "concurrently \"npm run start-server\" \"wait-on http://localhost:3000 && electron .\"",
    "dist": "npm run build:client && electron-builder",
    "pack": "electron-packager . \"Whatsapp Sender\" --platform=win32 --arch=x64 --out=dist-packager --overwrite"
  },
  "main": "main.js",
  "build": {
    "appId": "com.whatsapp.sender",
    "productName": "Whatsapp Sender",
    "win": {
      "target": "nsis"
    },
    "asar": false,
    "files": [
      "main.js",
      "server/**/*",
      "client/dist/**/*",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    }
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "electron-packager": "^17.1.2",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "qrcode": "^1.5.4",
    "socket.io": "^4.8.3",
    "whatsapp-web.js": "^1.34.4"
  }
}
